doctype html
html(data-framework="vue")
  head
    meta(charset="utf-8")
    title LiveScript • Pug • Vue.js • TodoMVC
    link(rel="stylesheet" href="node_modules/todomvc-common/base.css")
    link(rel="stylesheet" href="node_modules/todomvc-app-css/index.css")
    style [v-cloak] { display: none; }
  body
    section.todoapp(v-cloak)
      header.header
        h1 todos
        input.new-todo(autofocus autocomplete="off" placeholder="What needs to be done?" v-model="newTodo" @keyup.enter="addTodo")
      section.main(v-show="todos.length")
        input#toggle-all.toggle-all(type="checkbox" v-model="allDone")
        label(for="toggle-all") Mark all as complete
        ul.todo-list
          li.todo(v-for="todo in filteredTodos" :key="todo.id" :class="{completed: todo.completed, editing: todo == editedTodo}")
            .view
              input.toggle(type="checkbox" v-model="todo.completed")
              label(@dblclick="editTodo(todo)") {{todo.title}}
              button.destroy(@click="removeTodo(todo)")
            input.edit(type="text" v-model="todo.title" v-todo-focus="todo == editedTodo" @blur="doneEdit(todo)" @keyup.enter="doneEdit(todo)" @keyup.esc="cancelEdit(todo)")
      footer.footer(v-show="todos.length")
        span.todo-count
          strong(v-text="remaining")
          | {{pluralize('item', remaining)}} left
        ul.filters
          li
            a(href="#/all" :class="{selected: visibility == 'all'}") All
          li
            a(href="#/active" :class="{selected: visibility == 'active'}") Active
          li
            a(href="#/completed" :class="{selected: visibility == 'completed'}") Completed
        button.clear-completed(@click="removeCompleted" v-show!="todos.length > remaining") Clear completed
    footer.info
      p Double-click to edit a todo
      p Original JavaScript and HTML by 
        a(href="http://evanyou.me") Evan You
      p Translated into LiveScript and Pug by Igor Kaplounenko
      p Part of 
        a(href="http://todomvc.com") TodoMVC
    script(src="node_modules/todomvc-common/base.js")
    script(src="node_modules/director/build/director.js")
    script(src="node_modules/vue/dist/vue.js")
    script(src="js/store.js")
    script(src="js/app.js")
    script(src="js/routes.js")
